  "buildPresets": [
    {
      "name": "ninja-release",
      "configurePreset": "ninja-release"
    },
    {
      "name": "ninja-debug",
      "configurePreset": "ninja-debug"
    },
    {
      "name": "macos-clang",
      "configurePreset": "macos-clang"
    },
    {
      "name": "unix-makefiles-release",
      "configurePreset": "unix-makefiles-release"
    },
    {
      "name": "mingw-release",

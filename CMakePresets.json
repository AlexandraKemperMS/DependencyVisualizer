{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
      }
    },
    {
      "name": "mingw-release",
      "displayName": "MinGW Release",
      "inherits": ["default"],
      "description": "Release build using MinGW on Windows.",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mingw-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++.exe"
      }
    },
    {
      "name": "unix-release",
      "displayName": "Unix Release",
      "inherits": ["default"],
      "description": "Release build using GCC on Unix/Linux systems.",
      "binaryDir": "${sourceDir}/build/unix-release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "mingw-release",
      "displayName": "MinGW Release Build",
      "configurePreset": "mingw-release",
      "description": "Build using MinGW Release configuration"
    },
    {
      "name": "unix-release", 
      "displayName": "Unix Release Build",
      "configurePreset": "unix-release",
      "description": "Build using Unix Release configuration"
    }
  ]
}
